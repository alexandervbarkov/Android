<TableLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="${relativePackage}.${activityClass}"
    android:id="@+id/tbll_frag_remote_controller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:background="@drawable/table_background" >

    <TextView 
        android:id="@+id/tv_frag_remote_controller_selected"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/window_patch"
        android:gravity="center"
        android:textSize="50dp"
        android:textColor="#ffffff" />"
    
    <TextView 
        android:id="@+id/tv_frag_remote_controller_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bar_patch"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="italic" />
    
    <include 
        layout="@layout/tblr_remote_controller"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1" />

    <include 
        layout="@layout/tblr_remote_controller"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1" />
    
    <include 
        layout="@layout/tblr_remote_controller"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1" />
    
    <include 
        layout="@layout/tblr_remote_controller"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1" />"
    
</TableLayout>